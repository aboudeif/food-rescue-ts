generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // e.g. "file:./dev.db"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  role      Role    @default(INDIVIDUAL)
  lat       Float? 
  lng       Float?
  foods     Food[]  @relation("ownerFoods")
  reservations Reservation[]
  createdAt DateTime @default(now())
}

model Food {
  id         Int      @id @default(autoincrement())
  title      String
  description String?
  imagePath  String?
  quantity   Int
  expiryDate DateTime?
  status     FoodStatus @default(AVAILABLE)
  restaurant User     @relation(fields: [restaurantId], references: [id], name: "ownerFoods")
  restaurantId Int
  reservations Reservation[]
  createdAt  DateTime @default(now())
}

model Reservation {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  food      Food     @relation(fields: [foodId], references: [id])
  foodId    Int
  status    ReservationStatus @default(PENDING)
  reservedAt DateTime @default(now())
}

enum Role {
  RESTAURANT
  CHARITY
  INDIVIDUAL
}

enum FoodStatus {
  AVAILABLE
  RESERVED
  TAKEN
}

enum ReservationStatus {
  PENDING
  COMPLETED
  CANCELLED
}
